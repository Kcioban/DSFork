head
  meta(charset='utf-8')
  title Livro de Receitas
  link(rel='stylesheet', href='style.css')
  link(rel="shortcut icon" href="./assets/ico.png")

header
  h1 Minhas Receitas
  div
    //button(onclick="modalCreate.classList.remove('oculto');") Adicionar
    button(onclick="modalLogin.classList.remove('oculto');") Entrar
    //button(onclick="sair()") Sair

main
  section(id="cards")
    each receita in receitas
      if receita.foto
        -var foto='data:image/png;base64,'+receita.foto
      else
        -var foto="./assets/default.png"
      div(class="card")
        div
          div
            b Id:
            label=receita._id
            button [*]
            button [-]
        div
          b Nome:
          label=receita.nome
        div
          b Tipo:
          label=receita.tipo
        div
          b Ingredientes:
          label=receita.ingredientes
        div
          b Modo de Fazer:
          label=receita.modoPreparo
        img(class="img" src=foto)

  section(id="modalCreate" class="modal oculto")
    form(id="create")
      h2 Adicionar Receita
      div(style="justify-content: space-around;")
        h3 Tipo:
        select(name="tipo" id="tipoC" placeholder="Tipo")
          option(value="salgado") Salgada
          option(value="doce") Doce
      div
        label Nome:
        input(type="text" name="nome" id="nomeC" placeholder="Nome da receita" required)
      div
        label Ingredientes:
        textarea(name="ingredientes" id="ingredientesC" placeholder="Ingredientes" required)
      div
        label Modo de Preparo:
        textarea(name="modoPreparo" id="modoPreparoC" placeholder="Modo de Preparo" required)
      div
        label Imagem:
        input(type="file" name="img" id="fileC" onchange="prevImgCreate()" accept="image/jpeg, image/png")
        img(src="./assets/default.png" name="imagem" alt="Imagem")
      div(class="botoes")
        button(type="submit") Adicionar
        button(type="reset" onclick="modalCreate.classList.add('oculto');") Cancelar